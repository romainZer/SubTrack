<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="calendarPage"
             Padding="0"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SubTrack.Controls"
             xmlns:viewModels="clr-namespace:SubTrack.ViewModels"
             xmlns:converters="clr-namespace:SubTrack.Converters"
             x:Class="SubTrack.Views.CalendarPage">

    <ContentPage.BindingContext>
        <viewModels:CalendarPageViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NumberToMonthConverter x:Key="NumberToMonthConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <AbsoluteLayout>

        <!-- Mise en place d'une grille pour séparer la section fixe et le contenu scrollable -->
        <Grid AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header fixe pour la balance -->
            <StackLayout Grid.Row="0" BackgroundColor="{StaticResource Gray950}" 
                         HorizontalOptions="Fill" VerticalOptions="Center" Padding="10">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="Votre balance en " FontSize="Medium" HorizontalOptions="Center"/>
                    <Label x:Name="CurrentMonthCalendarPage" 
                           Text="{Binding CalendarViewModel.CurrentMonth, Converter={StaticResource NumberToMonthConverter}}" 
                           FontSize="Medium" HorizontalOptions="Center"/>
                </StackLayout>
                <Label Text="{Binding CurrentBalance, StringFormat='{0:C}'}" 
                       FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>
            </StackLayout>

            <!-- Zone scrollable pour le reste du contenu -->
            <ScrollView Grid.Row="1" Padding="0,0,0,80">
                <StackLayout Spacing="10" Padding="10">
                    <!-- Contrôle CalendarComponent -->
                    <controls:CalendarComponent  
                        CurrentYear="{Binding CurrentYear, Mode=TwoWay}"
                        CurrentMonth="{Binding CurrentMonth, Mode=TwoWay}"
                        BindingContext="{Binding CalendarViewModel}" />

                    <!-- Séparateur -->
                    <BoxView Style="{StaticResource SeparatorStyle}" />

                    <!-- Liste des opérations avec SwipeView pour chaque élément -->
                    <StackLayout BindableLayout.ItemsSource="{Binding Operations}" Spacing="10">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <SwipeView>
                                    <SwipeView.RightItems>
                                        <SwipeItems Mode="Execute">
                                            <!-- Utilisation de SwipeItemView pour personnaliser l'aspect -->
                                            <SwipeItemView BackgroundColor="Red" WidthRequest="60">
                                                <Grid HorizontalOptions="Center" VerticalOptions="Center">
                                                    <Image Source="trash.png" 
                                                           WidthRequest="24" 
                                                           HeightRequest="24"
                                                           HorizontalOptions="Center" 
                                                           VerticalOptions="Center" />
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Source={x:Reference calendarPage}, Path=BindingContext.DeleteOperationCommand}"
                                                                              CommandParameter="{Binding OperationId}" />
                                                    </Grid.GestureRecognizers>
                                                </Grid>
                                            </SwipeItemView>
                                        </SwipeItems>
                                    </SwipeView.RightItems>
                                    <controls:OperationItemComponent BindingContext="{Binding .}" />
                                </SwipeView>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </Grid>

        <!-- Bouton flottant en bas à droite -->
        <Button Text="+"  
                FontSize="Large"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="10"
                BackgroundColor="#2596be"
                TextColor="White"
                Command="{Binding AddOperationCommand}"
                AbsoluteLayout.LayoutBounds="1,1,AutoSize,AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Margin="0,0,20,20"/>
    </AbsoluteLayout>
</ContentPage>



