<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SubTrack.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SubTrack"
    xmlns:views="clr-namespace:SubTrack.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SubTrack">

    <TabBar>
        <Tab Title="Accueil" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Calendrier" Icon="calendar.png">
            <ShellContent ContentTemplate="{DataTemplate views:CalendarPage}" />
        </Tab>
        <Tab Title="Profil" Icon="profile.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>