<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SubTrack.Controls.CalendarComponent"
             x:Name="CalendarControl">

    <StackLayout Padding="10">
        <!-- Boutons de navigation -->
        <FlexLayout Direction="Row" JustifyContent="SpaceBetween">
            <!-- Bouton "Précédent" lié à la commande du ViewModel -->
            <Button Text="Précédent"
                    Command="{Binding PreviousMonthCommand}"
                    VerticalOptions="Center" />

            <!-- Affichage du mois et de l'année -->
            <Label VerticalOptions="Center" FontSize="16">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding CurrentMonthName}" />
                        <Span Text=" " />
                        <Span Text="{Binding CurrentYear}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <!-- Bouton "Suivant" lié à la commande du ViewModel -->
            <Button Text="Suivant"
                    Command="{Binding NextMonthCommand}"
                    VerticalOptions="Center" />
        </FlexLayout>

        <!-- Grille du calendrier (définie en XAML) -->
        <!-- Le code du calendrier est généré en code-behind -->
        <Grid x:Name="CalendarGrid" />
    </StackLayout>
</ContentView>