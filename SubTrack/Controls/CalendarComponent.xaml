<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SubTrack.Controls.CalendarComponent"
             x:Name="CalendarControl">

    <StackLayout Padding="10" Spacing="10">
        <!-- Boutons de navigation -->
        <FlexLayout Direction="Row" JustifyContent="SpaceBetween" AlignItems="Center">
            <!-- Bouton "Précédent" -->
            <Button Text="‹"
                    Command="{Binding PreviousMonthCommand}"
                    FontSize="18"
                    BackgroundColor="Transparent"
                    TextColor="#2596be"
                    Padding="0"
                    CornerRadius="20"
                    WidthRequest="40"
                    HeightRequest="40" />

            <!-- Affichage du mois et de l'année -->
            <Label FontSize="16" TextColor="#333333" FontAttributes="Bold">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding CurrentMonthName}" />
                        <Span Text=" " />
                        <Span Text="{Binding CurrentYear}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <!-- Bouton "Suivant" -->
            <Button Text="›"
                    Command="{Binding NextMonthCommand}"
                    FontSize="18"
                    BackgroundColor="Transparent"
                    TextColor="#2596be"
                    Padding="0"
                    CornerRadius="20"
                    WidthRequest="40"
                    HeightRequest="40" />
        </FlexLayout>

        <!-- Grille du calendrier -->
        <Grid x:Name="CalendarGrid" ColumnSpacing="5" RowSpacing="5" />
    </StackLayout>
</ContentView>