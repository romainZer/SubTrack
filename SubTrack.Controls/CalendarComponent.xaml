<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SubTrack.ViewModels"
             x:Class="SubTrack.Controls.CalendarComponent">

    <ContentView.BindingContext>
        <!-- Définir le BindingContext pour le contrôle -->
        <controls:CalendarViewModel />
    </ContentView.BindingContext>

    <StackLayout>
        <!-- Boutons de navigation -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Précédent" Command="{Binding GenerateCalendarCommand}" />
            <Button Text="Suivant" Command="{Binding GenerateCalendarCommand}" />
        </StackLayout>

        <!-- Grille du calendrier -->
        <Grid x:Name="CalendarGrid">
            <!-- Les colonnes et les lignes seront générées dynamiquement dans le code-behind -->
        </Grid>
    </StackLayout>
</ContentView>
